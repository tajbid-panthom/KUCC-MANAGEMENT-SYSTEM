<% layout("/layouts/boilerplate.ejs") %>

<section
  class="update-mentor-section d-flex align-items-center justify-content-center py-5"
  style="
    background: linear-gradient(
      to bottom,
      #4ac7de,
      #6de1f0
    ); /* Adjusted gradient based on image */
    min-height: 85vh; /* Ensure it takes significant height */
    font-family: sans-serif; /* Basic sans-serif font */
  "
>
  <div class="container">
    <h2 class="text-center text-white fw-bold mb-5">Update Mentor</h2>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <form
          action="/mentors/<%=mentor.mentor_id %>/view?_method=PUT"
          method="POST"
        >
          <div class="mb-3">
            <label for="mentorNameInput" class="form-label text-white fw-medium"
              >Mentor Name</label
            >
            <input
              type="text"
              class="form-control form-control-lg rounded"
              id="mentorNameInput"
              name="mentor_name"
              required
              value="<%=mentor.mentor_name %>"
            />
          </div>

          <div class="mb-3">
            <label
              for="mentorQualificationInput"
              class="form-label text-white fw-medium"
              >Mentor Qualification</label
            >
            <input
              type="text"
              class="form-control form-control-lg rounded"
              id="mentorQualificationInput"
              name="qualification"
              placeholder="Mentor qualification"
              required
              value="<%=mentor.qualification %>"
            />
          </div>
          <div class="mb-3">
            <label
              for="mentorDescriptionInput"
              class="form-label text-white fw-medium"
              >Mentor Description</label
            >
            <input
              type="text"
              class="form-control form-control-lg rounded"
              id="mentorDescriptionInput"
              name="description"
              placeholder="Mentor description"
              required
              value="<%=mentor.description %>"
            />
          </div>
          <div class="mb-4">
            <label
              for="mentorEmailInput"
              class="form-label text-white fw-medium"
              >Mentor Email</label
            >
            <input
              type="email"
              class="form-control form-control-lg rounded"
              id="mentorEmailInput"
              name="email"
              placeholder="Mentor email"
              required
              value="<%=mentor.email %>"
            />
          </div>

          <div class="d-grid">
            <button
              type="submit"
              class="btn btn-lg shadow-sm"
              style="
                background-color: #00c3ff;
                color: white;
                border: none;
                padding-top: 0.75rem;
                padding-bottom: 0.75rem;
              "
            >
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
