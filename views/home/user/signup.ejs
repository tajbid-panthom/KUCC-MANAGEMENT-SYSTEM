<% layout("/layouts/boilerplate.ejs") %>

<section
  class="registration-form-section py-5 bg-white"
  style="background: linear-gradient(to bottom, #00b4d8, #caf0f8)"
>
  <div class="container">
    <div class="text-center mb-2">
      <img
        src="/images/logoMain.jpg"
        alt="Career Club Logo"
        class="img-fluid mb-1"
        style="width: 100px; height: 100px; border-radius: 50%"
      />
    </div>

    <form action="/signup" method="POST">
      <div class="row g-4">
        <div class="col-lg-4">
          <div class="mb-3">
            <label for="regName" class="form-label small fw-medium"
              >Name:
            </label>
            <input
              type="text"
              class="form-control bg-light border-0"
              id="regName"
              name="name"
              placeholder="Enter your name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="regStudentId" class="form-label small fw-medium"
              >Student ID:</label
            >
            <input
              type="text"
              class="form-control bg-light border-0"
              id="regStudentId"
              name="student_id"
              placeholder="Enter your student id"
              required
            />
          </div>
          <div class="mb-3">
            <label for="regDiscipline" class="form-label small fw-medium"
              >Discipline:</label
            >
            <select
              class="form-select bg-light border-0"
              id="regDiscipline"
              name="dept_name"
              required
            >
              <option selected disabled value="">Select your discipline</option>
              <option value="CSE">Computer Science & Engineering</option>
              <option value="ECE">
                Electronics & Communication Engineering
              </option>
              <option value="ARCHI">Architecture</option>
              <option value="URP">Urban & Regional Planning</option>
              <option value="MATH">Mathematics</option>
              <option value="PHY">Physics</option>
              <option value="CHE">Chemistry</option>
              <option value="PHARMACHY">Pharmachy</option>
              <option value="BGE">Bioteachnology & Genetics Engineering</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="regSkills" class="form-label small fw-medium"
              >Skill:</label
            >
            <textarea
              class="form-control bg-light border-0"
              id="regSkills"
              name="skill"
              rows="4"
              placeholder="Enter your skills"
            ></textarea>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="mb-3">
            <label for="regEmail" class="form-label small fw-medium"
              >Email:</label
            >
            <input
              type="email"
              class="form-control bg-light border-0"
              id="regEmail"
              name="email"
              placeholder="info@gmail.com"
              required
            />
          </div>
          <div class="mb-3 position-relative">
            <label for="regPassword" class="form-label small fw-medium"
              >Password:</label
            >
            <input
              type="password"
              class="form-control bg-light border-0 pe-5 password-input"
              id="regPassword"
              name="password"
              placeholder="********"
              required
            />
            <span
              class="position-absolute end-0 top-50 translate-middle-y me-3 mt-3 toggle-password cursor-pointer"
            >
              <i class="bi bi-eye-fill text-secondary"></i>
            </span>
          </div>
          <div class="mb-3 position-relative">
            <label for="regConfirmPassword" class="form-label small fw-medium"
              >Confirm Password:</label
            >
            <input
              type="password"
              class="form-control bg-light border-0 pe-5 password-input"
              id="regConfirmPassword"
              name="confirm_password"
              placeholder="********"
              required
            />
            <span
              class="position-absolute end-0 top-50 translate-middle-y me-3 mt-3 toggle-password cursor-pointer"
            >
              <i class="bi bi-eye-fill text-secondary"></i>
            </span>
          </div>
          <div class="mb-3">
            <label for="regPaymentMethod" class="form-label small fw-medium"
              >Payment Method:</label
            >
            <select
              class="form-select bg-light border-0"
              id="regPaymentMethod"
              name="payment_method"
              required
            >
              <option selected disabled value="">
                Select your payment method
              </option>
              <option value="Bkash">Bkash</option>
              <option value="Nagad">Nagad</option>
              <option value="Rocket">Rocket</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="regExpectationClub" class="form-label small fw-medium"
              >What do you expect from club?:</label
            >
            <textarea
              class="form-control bg-light border-0"
              id="regExpectationClub"
              name="expectation"
              rows="2"
              placeholder="Write your expectation"
            ></textarea>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="mb-3">
            <label for="regHomeTown" class="form-label small fw-medium"
              >Home Town:</label
            >
            <input
              type="text"
              class="form-control bg-light border-0"
              id="regHomeTown"
              name="hometown"
              placeholder="Enter your home town"
              required
            />
          </div>
          <div class="mb-3">
            <label for="regMobileNo" class="form-label small fw-medium"
              >Mobile No:</label
            >
            <input
              type="tel"
              class="form-control bg-light border-0"
              id="regMobileNo"
              name="phone_number"
              placeholder="Enter your mobile no"
              required
            />
          </div>
          <div class="mb-3">
            <label for="regTransactionId" class="form-label small fw-medium"
              >Transaction Id:</label
            >
            <input
              type="text"
              class="form-control bg-light border-0"
              id="regTransactionId"
              name="transaction_id"
              placeholder="Enter your transaction id"
              required
            />
          </div>
          <div class="mb-3">
            <label for="regWhyHire" class="form-label small fw-medium"
              >Why will we hire you?:</label
            >
            <textarea
              class="form-control bg-light border-0"
              id="regWhyHire"
              name="why_hire"
              rows="3"
              placeholder="Write your expectation"
            ></textarea>
          </div>
        </div>
      </div>

      <div class="text-center mt-4 mb-3">
        <button
          type="submit"
          class="btn btn-primary rounded fw-medium px-4 py-2"
          style="background-color: #4267b2; border-color: #4267b2"
        >
          Submit
        </button>
      </div>

      <p class="text-center small fw-bold">
        NB: <span style="color: #dc3545">The red circle</span> defines the
        required system.
      </p>
    </form>
  </div>
</section>
<script>
  document.querySelectorAll(".toggle-password").forEach(function (icon) {
    icon.addEventListener("click", function () {
      // Find the associated password input
      const input = this.parentElement.querySelector(".password-input");

      // Toggle between 'password' and 'text' type
      const type =
        input.getAttribute("type") === "password" ? "text" : "password";
      input.setAttribute("type", type);

      // Toggle eye icon (Bootstrap Icons)
      const eyeIcon = this.querySelector("i");
      if (type === "password") {
        eyeIcon.classList.remove("bi-eye-slash-fill");
        eyeIcon.classList.add("bi-eye-fill");
      } else {
        eyeIcon.classList.remove("bi-eye-fill");
        eyeIcon.classList.add("bi-eye-slash-fill");
      }
    });
  });

  document.querySelector("form").addEventListener("submit", function (e) {
    const password = document.getElementById("regPassword").value;
    const confirmPassword = document.getElementById("regConfirmPassword").value;

    if (password !== confirmPassword) {
      e.preventDefault(); // Stop form submission
      alert("Passwords do not match!");
    }
  });
</script>
