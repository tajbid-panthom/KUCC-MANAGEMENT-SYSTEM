<% layout("/layouts/boilerplate.ejs") %>

<section
  class="update-job-section d-flex align-items-center justify-content-center min-vh-100 bg-info bg-gradient"
>
  <div class="container">
    <h2 class="text-center text-white fw-bold mb-5 display-5">Update Job</h2>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-7">
        <form action="/jobs/<%= job.job_id%>/details?_method=PUT" method="POST">
          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="jobTitleInput" class="form-label text-white fw-medium"
                >Job Title</label
              >
              <input
                type="text"
                class="form-control form-control-lg rounded"
                id="jobTitleInput"
                name="role"
                placeholder="Job role"
                required
                value="<%=job.role %>"
              />
            </div>
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="jobTypeInput" class="form-label text-white fw-medium"
                >Job Type</label
              >
              <input
                type="text"
                class="form-control form-control-lg rounded"
                id="jobTypeInput"
                name="job_type"
                placeholder="Job Type"
                required
                value="<%=job.job_type %>"
              />
            </div>
          </div>

          <div class="mb-3">
            <label
              for="companyNameInput"
              class="form-label text-white fw-medium"
              >Company Name</label
            >
            <input
              type="text"
              class="form-control form-control-lg rounded"
              id="companyNameInput"
              name="company_name"
              placeholder="Enter your company name"
              required
              value="<%= job.company_name%>"
              disabled
            />
          </div>

          <div class="mb-3">
            <label
              for="jobDescriptionInput"
              class="form-label text-white fw-medium"
              >Job Description</label
            >
            <textarea
              class="form-control form-control-lg rounded"
              id="jobDescriptionInput"
              name="job_description"
              rows="1"
              placeholder="Enter job description"
              required
            >
<%=job.job_description %>
            </textarea>
          </div>

          <div class="row mb-4">
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="salaryInput" class="form-label text-white fw-medium"
                >Salary</label
              >
              <select
                class="form-select form-select-lg rounded"
                id="salaryInput"
                name="salary"
                required
              >
                <option selected disabled value=""><%=job.salary %></option>
                <option value="20000">$20,000</option>
                <option value="30000">$30,000</option>
                <option value="40000">$40,000</option>
                <option value="40000+">$40,000+</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="locationInput" class="form-label text-white fw-medium"
                >Location</label
              >
              <input
                type="text"
                class="form-control form-control-lg rounded"
                id="locationInput"
                name="location"
                placeholder="Enter your location"
                required
                value="<%=job.location %>"
              />
            </div>
          </div>
          <div class="mb-3">
            <label for="deadlineInput" class="form-label text-white fw-medium"
              >Deadline</label
            >
            <input
              type="date"
              class="form-control form-control-lg rounded"
              id="deadlineInput"
              name="deadline"
              placeholder="Enter your deadline"
              required
              value="<%=job.deadline %>"
            />
          </div>

          <div class="d-grid">
            <button
              type="submit"
              class="btn btn-info btn-lg shadow-sm text-white py-2 fw-medium border border-white"
              style="
                --bs-btn-bg: #00c3ff;
                --bs-btn-border-color: #fff;
                --bs-btn-hover-bg: #00a8e0;
                --bs-btn-hover-border-color: #fff;
              "
            >
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
