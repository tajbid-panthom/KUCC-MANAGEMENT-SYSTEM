<% layout("/layouts/boilerplate.ejs") %>
<section>
  <div class="job-section-content py-5" style="background-color: #00c3ff">
    <div class="container">
      <div class="row align-items-center mb-5 gy-4">
        <div class="col-lg-7 col-md-6">
          <h3 class="display-6 fw-bold mb-3 text-dark">
            Find a job that suits <br />
            your interest & skills.
          </h3>
          <p class="text-secondary mb-4">
            Aliquam vitae turpis in diam convallis finibus in at risus. Nullam
            in scelerisque leo, eget sollicitudin velit vestibulum.
          </p>

          <form action="#">
            <div
              class="input-group input-group-lg bg-white p-2 rounded shadow-sm mb-3"
            >
              <span
                class="input-group-text bg-transparent border-0 text-secondary"
              >
                <i class="fas fa-search"></i>
              </span>
              <input
                type="text"
                class="form-control border-0 me-2"
                placeholder="Job tittle, Keyword..."
                aria-label="Job title or keyword"
                name="keyword"
              />

              <span
                class="input-group-text bg-transparent border-0 text-secondary d-none d-sm-inline-block"
              >
                <i class="fas fa-map-marker-alt"></i>
              </span>
              <input
                type="text"
                class="form-control border-0 flex-grow-1 me-2"
                placeholder="Your Location"
                aria-label="Location"
                name="location"
              />

              <button class="btn btn-primary px-4" type="submit">
                Find Job
              </button>
            </div>
          </form>

          <p class="small text-secondary">
            <span class="fw-semibold">Suggestion:</span> Designer, Programing,
            <a href="#" class="text-decoration-none">Digital Marketing</a>,
            Video, Animation.
          </p>
        </div>

        <div class="col-lg-5 col-md-6 text-center">
          <img
            src="/images/job_img.png"
            alt="Job search illustration"
            class="img-fluid"
            style="max-width: 400px"
          />
        </div>
      </div>

      <%# --- Stats Row --- %>
      <div class="row g-4 mb-5 text-center text-md-start">
        <%# Stat Card 1: Live Job %>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
              <div class="stat-icon bg-info-subtle text-info me-3 p-2 rounded">
                <i class="fas fa-briefcase fs-4"></i>
              </div>
              <div>
                <div class="fs-4 fw-bold text-dark"><%= totalJobs %></div>
                <div class="small text-secondary">Live Job</div>
              </div>
            </div>
          </div>
        </div>

        <%# Stat Card 2: Companies %>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
              <div
                class="stat-icon bg-primary-subtle text-primary me-3 p-2 rounded"
              >
                <i class="fas fa-building fs-4"></i>
              </div>
              <div>
                <div class="fs-4 fw-bold text-dark">97,354</div>
                <div class="small text-secondary">Companies</div>
              </div>
            </div>
          </div>
        </div>

        <%# Stat Card 3: Candidates %>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
              <div
                class="stat-icon bg-secondary-subtle text-secondary me-3 p-2 rounded"
              >
                <i class="fas fa-users fs-4"></i>
              </div>
              <div>
                <div class="fs-4 fw-bold text-dark">38,47,154</div>
                <div class="small text-secondary">Candidates</div>
              </div>
            </div>
          </div>
        </div>

        <%# Stat Card 4: New Jobs %>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
              <div class="stat-icon bg-info-subtle text-info me-3 p-2 rounded">
                <i class="fas fa-briefcase fs-4"></i>
              </div>
              <div>
                <div class="fs-4 fw-bold text-dark">7,532</div>
                <div class="small text-secondary">New Jobs</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% if(global.shared.admin){ %>
      <div class="text-center">
        <a
          href="/jobs/new"
          class="btn btn-cyan btn-lg px-5"
          style="background-color: #2836f5; color: white"
          >New</a
        >
      </div>
      <% } %>
    </div>
  </div>
</section>

<section class="featured-job-section py-5" style="background-color: #00c3ff">
  <div class="container p-3" style="background-color: #f8f8f8">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Featured job</h2>
      <a
        href="/jobs"
        class="btn btn-link text-decoration-none text-primary fw-medium"
      >
        View All <i class="bi bi-arrow-right ms-1"></i>
      </a>
    </div>
    <div style="height: 1px; background: black; margin: 0 0 20px 0"></div>
    <div
      class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5"
      style="background-color: #f8f8f8"
    >
      <!-- Start Job Card 1 -->
      <% for(let job of jobs) { %>
      <div class="col">
        <div class="card h-100 border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body">
            <h6 class="fw-bold mb-1"><%=job.role %></h6>
            <div class="mb-2">
              <span
                class="badge rounded-pill bg-success-subtle text-success-emphasis fw-medium px-2 py-1 me-2"
              >
                <%=job.job_type %>
              </span>
              <small class="text-muted">Salary: $20,000 - $25,000</small>
            </div>
            <div class="d-flex align-items-center mt-3">
              <img
                src="https://github.com/shadcn.png"
                alt="Company Logo"
                width="24"
                height="24"
                class="me-2 rounded-circle"
              />
              <div>
                <span class="d-block fw-medium small">
                  <%= job.company_name %>
                </span>
                <small class="text-muted d-flex align-items-center">
                  <i class="bi bi-geo-alt-fill me-1"></i> <%= job.location %>
                </small>
              </div>
              <a href="#" class="ms-auto text-secondary">
                <i class="bi bi-bookmark fs-5"></i>
              </a>
            </div>
            <a
              href="/jobs/<%= job.job_id %>/details"
              class="d-block p-3 text-center text-decoration-none fw-semibold rounded mt-3"
              style="background-color: #e3f2fd; color: #0d6efd"
            >
              Job Details
            </a>
          </div>
        </div>
      </div>
      <% } %>
      <!-- End Job Card 1 -->
    </div>
  </div>
  <div
    class="text-center mt-4"
    style="background-color: #00c3ff; padding: 3rem 0"
  >
    <a
      href="/companies"
      class="btn btn-info btn-lg text-white rounded shadow-sm px-5 py-3 fw-medium border border-white"
      style="
        --bs-btn-bg: #00c3ff;
        --bs-btn-border-color: #fff;
        --bs-btn-hover-bg: #00a8e0;
        --bs-btn-hover-border-color: #fff;
      "
    >
      Check ours Companies...
    </a>
  </div>
</section>
