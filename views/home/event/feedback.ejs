<% layout("/layouts/boilerplate.ejs") %>

<section
  class="feedback-form-section d-flex align-items-center justify-content-center py-5 min-vh-100"
  style="background: linear-gradient(to bottom, #4ac7de, #6de1f0)"
>
  <div class="container">
    <h2 class="text-center fw-bold mb-4" style="color: #fff">
      Share your feedback
    </h2>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card border-0 shadow-lg rounded-4">
          <div class="card-body p-4 p-md-5">
            <form action="/previousevents_feedback" method="POST">
              <div class="mb-4">
                <input
                  type="hidden"
                  name="member_id"
                  value="<%=member.member_id %>"
                />
                <input type="hidden" name="event_id" value="<%=event_id %>" />
                <label for="feedbackName" class="form-label fw-medium"
                  >Name</label
                >
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0"
                    ><i class="bi bi-person-fill text-primary"></i
                  ></span>
                  <input
                    type="text"
                    class="form-control form-control-lg border-start-0"
                    id="feedbackName"
                    value="<%=member.name %>"
                    required
                    style="
                      border-top-right-radius: 0.375rem;
                      border-bottom-right-radius: 0.375rem;
                    "
                  />
                </div>
              </div>

              <div class="mb-4">
                <label
                  for="feedbackComments"
                  class="form-label fw-medium visually-hidden"
                  >Comments</label
                >
                <textarea
                  class="form-control form-control-lg rounded-3"
                  id="feedbackComments"
                  name="comment"
                  rows="4"
                  placeholder="Add your comments..."
                ></textarea>
              </div>

              <div class="d-flex justify-content-end align-items-center gap-3">
                <a
                  type="submit"
                  href="/previousevents/<%=event_id %>/details"
                  class="btn btn-link text-secondary text-decoration-none fw-medium"
                >
                  Cancel
                </a>
                <button
                  type="submit"
                  class="btn btn-primary btn-lg fw-medium px-4 rounded-3 shadow-sm"
                  style="background-color: #0d6efd; border-color: #0d6efd"
                >
                  SUBMIT
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
