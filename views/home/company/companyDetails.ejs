<% layout("/layouts/boilerplate.ejs") %>

<section class="position-relative overflow-hidden">
  <div
    class="position-absolute top-0 start-0 w-100 h-100"
    style="
      background-image: url('/images/companies.jpg');
      background-size: cover;
      background-position: center center;
      z-index: 0;
    "
  ></div>

  <div
    class="position-absolute top-0 start-0 w-100 h-100"
    style="background-color: rgba(0, 0, 0, 0.25); z-index: 1"
  ></div>

  <div
    class="container position-relative"
    style="z-index: 2; padding-top: 8rem; padding-bottom: 6rem"
  >
    <div class="row">
      <div class="col-lg-8 col-md-10">
        <h1
          class="display-1 fw-bolder text-white"
          style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7)"
        >
          <%= company.company_name %>
        </h1>
        <h1
          class="display-1 fw-bolder text-white"
          style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7)"
        >
          Corporation
        </h1>
      </div>
    </div>
  </div>

  <div
    class="position-relative"
    style="z-index: 2; background-color: #29c3f3; height: 80px"
  ></div>

  <img
    src="/images/companylogo.png"
    alt="Company Logo"
    class="position-absolute start-0 ms-5 bg-white p-2 shadow-sm rounded"
    style="width: 100px; height: auto; bottom: 40px; z-index: 3"
  />
</section>

<section class="company-details-section py-5" style="background-color: #e0f7fa">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-7">
        <div class="bg-white p-4 p-md-5 rounded-3 shadow-sm h-100">
          <div class="mb-4">
            <h3 class="fw-bold mb-3">Company Description</h3>
            <p class="text-muted"><%= company.company_detail %></p>
          </div>
        </div>
      </div>

      <!-- Right Column: About & Contacts Sidebar  -->
      <div class="col-lg-5">
        <div class="bg-white p-4 p-md-5 rounded-3 shadow-sm h-100">
          <h4 class="fw-bold mb-4">About Company</h4>

          <div class="d-flex align-items-start mb-3 gap-3">
            <i class="bi bi-briefcase fs-4 text-primary mt-1"></i>
            <div>
              <span class="fw-bold d-block">Primary Industry:</span>
              <span class="text-muted"><%= company.company_type %></span>
            </div>
          </div>

          <hr class="my-4" />

          <h4 class="fw-bold mb-4">Contacts</h4>

          <div class="row mb-3">
            <div class="col-sm-6">
              <span class="fw-bold d-block">Email:</span>
              <span class="text-muted"> support@acmecorp.com</span>
            </div>
          </div>

          <div class="mb-4">
            <span class="fw-bold d-block">Location:</span>
            <span class="text-muted"> <%=company.address %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

