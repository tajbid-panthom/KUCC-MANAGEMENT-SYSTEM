<%# --- Main Content Area --- %>
<div class="job-section-content py-5" style="background-color: #00c3ff">
  <!-- Custom Light Blue BG -->
  <div class="container">
    <%# --- Top Row: Search Area & Illustration --- %>
    <div class="row align-items-center mb-5 gy-4">
      <%# Left Column: Text & Search %>
      <div class="col-lg-7 col-md-6">
        <h3 class="display-6 fw-bold mb-3 text-dark">
          Find a job that suits <br />
          your interest & skills.
        </h3>
        <p class="text-secondary mb-4">
          Aliquam vitae turpis in diam convallis finibus in at risus. Nullam in
          scelerisque leo, eget sollicitudin velit vestibulum.
        </p>

        <%# Search Form Input Group %>
        <form action="/jobs/search" method="GET">
          <!-- Example action -->
          <div
            class="input-group input-group-lg bg-white p-2 rounded shadow-sm mb-3"
          >
            <span
              class="input-group-text bg-transparent border-0 text-secondary"
            >
              <i class="fas fa-search"></i>
            </span>
            <input
              type="text"
              class="form-control border-0 me-2"
              placeholder="Job tittle, Keyword..."
              aria-label="Job title or keyword"
              name="keyword"
            />

            <span
              class="input-group-text bg-transparent border-0 text-secondary d-none d-sm-inline-block"
            >
              <!-- Hide icon on extra small screens -->
              <i class="fas fa-map-marker-alt"></i>
            </span>
            <input
              type="text"
              class="form-control border-0 flex-grow-1 me-2"
              placeholder="Your Location"
              aria-label="Location"
              name="location"
            />

            <button class="btn btn-primary px-4" type="submit">Find Job</button>
          </div>
        </form>

        <%# Suggestion Text %>
        <p class="small text-secondary">
          <span class="fw-semibold">Suggestion:</span> Designer, Programing,
          <a href="#" class="text-decoration-none">Digital Marketing</a>, Video,
          Animation.
        </p>
      </div>

      <%# Right Column: Illustration %>
      <div class="col-lg-5 col-md-6 text-center">
        <img
          src="/images/job_img.png"
          alt="Job search illustration"
          class="img-fluid"
          style="max-width: 400px"
        />
        <!-- Adjust max-width as needed -->
      </div>
    </div>

    <%# --- Stats Row --- %>
    <div class="row g-4 mb-5 text-center text-md-start">
      <%# Stat Card 1: Live Job %>
      <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stat-icon bg-info-subtle text-info me-3 p-2 rounded">
              <!-- Custom class needed for exact icon style -->
              <i class="fas fa-briefcase fs-4"></i>
            </div>
            <div>
              <div class="fs-4 fw-bold text-dark">1,75,324</div>
              <div class="small text-secondary">Live Job</div>
            </div>
          </div>
        </div>
      </div>

      <%# Stat Card 2: Companies %>
      <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <div
              class="stat-icon bg-primary-subtle text-primary me-3 p-2 rounded"
            >
              <!-- Custom class needed for exact icon style -->
              <i class="fas fa-building fs-4"></i>
            </div>
            <div>
              <div class="fs-4 fw-bold text-dark">97,354</div>
              <div class="small text-secondary">Companies</div>
            </div>
          </div>
        </div>
      </div>

      <%# Stat Card 3: Candidates %>
      <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <div
              class="stat-icon bg-secondary-subtle text-secondary me-3 p-2 rounded"
            >
              <!-- Custom class needed for exact icon style -->
              <i class="fas fa-users fs-4"></i>
              <!-- Changed icon slightly to match image better -->
            </div>
            <div>
              <div class="fs-4 fw-bold text-dark">38,47,154</div>
              <div class="small text-secondary">Candidates</div>
            </div>
          </div>
        </div>
      </div>

      <%# Stat Card 4: New Jobs %>
      <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stat-icon bg-info-subtle text-info me-3 p-2 rounded">
              <!-- Custom class needed for exact icon style -->
              <i class="fas fa-briefcase fs-4"></i>
              <!-- Re-using briefcase -->
            </div>
            <div>
              <div class="fs-4 fw-bold text-dark">7,532</div>
              <div class="small text-secondary">New Jobs</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center">
      <a
        href="/jobs"
        class="btn btn-cyan btn-lg px-5"
        style="background-color: #28c3f5; color: white"
        >Explore</a
      >
    </div>
  </div>
  <!-- /.container -->
</div>
